<body>
    <header>
        <nav class="navbar">
            <a id="logo" href="/">Boomerang</a>
            <div class="questions-searchbar">
                <form action="/" class="d-flex">
                    <input name="search" type="text" placeholder="What are you looking for?">
                    <button type="submit" class="btn btn-primary ml-2">Search</button>
                </form>
            </div>
            <!-- Login -->
            <% if (user) { %>
                <div id="login-wrapper">
                    <div class="dropdown">
                        <button class="btn btn-primary dropdown-toggle" type="button" id="user-dropdown" data-toggle="dropdown"
                            aria-haspopup="true" aria-expanded="false">
                            <%= user.username %><img class="user-avatar" src=<%=user.avatarUrl %>>
                        </button>
                        <div class="dropdown-menu" aria-labelledby="user-dropdown">
                            <a class="dropdown-item" href="/users/show/<%= user._id %>">Profile</a>
                            <a class="dropdown-item" href="/logout">Logout</a>
                        </div>
                    </div>
                </div>
            <% } else { %>
                <div id="login-wrapper">
                    <a id="login" href="/auth/google">Login with Google</a>
                </div>
            <% } %>
        </nav>
    </header>
    <main>